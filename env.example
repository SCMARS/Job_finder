# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/job-automation

# Bundesagentur API (Official API with clientId authentication)
BUNDESAGENTUR_API_URL=https://rest.arbeitsagentur.de/jobboerse/jobsuche-service
BUNDESAGENTUR_CLIENT_ID=jobboerse-jobsuche

# Google Sheets API
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/google-sheets-credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_google_sheets_id

# Apollo API
APOLLO_API_KEY=your_apollo_api_key
APOLLO_API_URL=https://api.apollo.io/v1

# Instantly API
INSTANTLY_API_KEY=your_instantly_api_key
INSTANTLY_API_URL=https://api.instantly.ai/api/v1

# Pipedrive API
PIPEDRIVE_API_TOKEN=your_pipedrive_token
PIPEDRIVE_COMPANY_DOMAIN=your_company_domain

# Automation Settings
SEARCH_INTERVAL_HOURS=24
MAX_RESULTS_PER_SEARCH=100
DEFAULT_LOCATION=Germany 